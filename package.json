{
	"name": "isigestsyncapi",
	"version": "1.0.64",
	"description": "Plugin per la sincronizzazione dei dati di ISIGest tramite API",
	"author": "ISIGest S.r.l.",
	"main": "Gruntfile.js",
	"license": "GPL-2.0-or-later",
	"scripts": {
		"clean": "grunt clean",
		"build": "grunt build",
		"watch": "grunt watch",
		"package": "grunt package",
		"makepot": "grunt makepot",
		"format": "prettier --write \"**/*.{php,css,js}\" --plugin=@prettier/plugin-php",
		"format:check": "prettier --check \"**/*.{php,css,js}\" --plugin=@prettier/plugin-php",
		"lint": "eslint \"**/*.js\" --ignore-pattern 'vendor/**' --ignore-pattern 'node_modules/**'",
		"lint:fix": "eslint --fix \"**/*.js\" --ignore-pattern 'vendor/**' --ignore-pattern 'node_modules/**'",
		"format:php": "php-cs-fixer fix --config=.php-cs-fixer.php",
		"format:check:php": "php-cs-fixer fix --config=.php-cs-fixer.php --dry-run --diff",
		"version:patch": "node ./tools/update-version.js patch",
		"version:minor": "node ./tools/update-version.js minor",
		"version:major": "node ./tools/update-version.js major",
		"release:patch": "pnpm version:patch && pnpm package",
		"release:minor": "pnpm version:minor && pnpm package",
		"release:major": "pnpm version:major && pnpm package"
	},
	"devDependencies": {
		"@prettier/plugin-php": "^0.19.7",
		"eslint": "^8.47.0",
		"eslint-config-prettier": "^9.0.0",
		"grunt": "^1.6.1",
		"grunt-contrib-clean": "^2.0.1",
		"grunt-contrib-compress": "^2.0.0",
		"grunt-contrib-copy": "^1.0.0",
		"grunt-contrib-cssmin": "^5.0.0",
		"grunt-contrib-uglify": "^5.2.2",
		"grunt-contrib-watch": "^1.1.0",
		"grunt-phpcs": "^0.4.0",
		"grunt-wp-i18n": "^1.0.3",
		"load-grunt-tasks": "^5.1.0",
		"prettier": "^2.8.8"
	}
}
